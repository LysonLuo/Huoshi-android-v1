<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:paddingTop="@dimen/margin_10">

        <TextView
            android:id="@+id/tv_asked_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_10"
            android:paddingTop="@dimen/margin_6"
            android:textColor="#ff444444"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            tools:text="测试" />

        <TextView
            android:id="@+id/tv_asked_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_6"
            android:textColor="@color/text_color_gray_9"
            android:textSize="@dimen/text_size_12"
            tools:text="2016年05月27日" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_10"
            android:text="内容来源:GotQuestions"
            android:textColor="@color/text_color_gray_9"
            android:textSize="@dimen/text_size_12" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5E5" />

        <TextView
            android:id="@+id/tv_asked_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/margin_4"
            android:paddingTop="@dimen/margin_10"
            android:textColor="@color/text_color_black_light"
            android:textSize="@dimen/text_size_17"
            tools:text="测试是测试是测试是测试是测试是测试是测试是测试是测试是测试是测试是测试是测试是测试是测试是测试是" />
    </LinearLayout>
</ScrollView>