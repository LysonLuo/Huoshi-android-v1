<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white_bg"
        android:padding="@dimen/margin_normal">

        <TextView
            android:id="@+id/textview_result_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创世纪"
            android:textColor="@color/text_color_black" />

        <TextView
            android:id="@+id/textview_result_chapter_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_toRightOf="@+id/textview_result_book_name"
            android:text="1:20"
            android:textColor="@color/text_color_black" />

        <TextView
            android:id="@+id/textview_result_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textview_result_book_name"
            android:layout_below="@+id/textview_result_book_name"
            android:layout_marginTop="@dimen/margin_small"
            android:text="神说：水要多多滋养有生命的生物"
            android:textColor="@color/text_color_chapter"
            android:textSize="@dimen/text_size_small_" />

    </RelativeLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_small"
        android:background="@color/common_gray_dark_bg" />
</LinearLayout>