<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    app:cardCornerRadius="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_12"
        android:paddingRight="@dimen/margin_12"
        android:paddingTop="@dimen/margin_10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageview_gender_bg"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@mipmap/img_default_avatar_white"
                    app:civ_border_color="@color/common_blue_light"
                    app:civ_border_width="1dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageview_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="1.4dp"
                    android:layout_marginTop="1.5dp"
                    android:src="@mipmap/img_default_avatar"
                    app:civ_border_color="@color/common_white_bg"
                    app:civ_border_width="1dp" />
            </FrameLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10">

                <TextView
                    android:id="@+id/textview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="名字"
                    android:textColor="@color/text_color_blue_dark"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/textview_relation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_name"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="朋友的朋友"
                    android:textColor="@color/text_color_gray_9"
                    android:textSize="@dimen/text_size_12" />
            </RelativeLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/textview_interces_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="3"
            android:text="211212211212211212211212211212211212"
            android:textColor="@color/text_color_black_light"
            android:textSize="@dimen/text_size_13" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_interces_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="@dimen/margin_2"
                android:text="一天前"
                android:textColor="@color/text_color_gray_9"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/textview_interces_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@mipmap/icon_interces_small"
                android:drawablePadding="@dimen/margin_10"
                android:gravity="right|center_vertical"
                android:text="2123人"
                android:textSize="@dimen/text_size_11" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>